{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update GitHub release download URLs in Nix files",
      "fileMatch": ["\\.nix$"],
      "matchStrings": [
        "url = \"https://github\\.com/(?<depName>[^/]+/[^/]+)/releases/download/(?<currentValue>[^/]+)"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "description": "Update fetchFromGitHub rev tags",
      "fileMatch": ["\\.nix$"],
      "matchStrings": [
        "# renovate: datasource=github-tags depName=(?<depName>.+?)\\s+rev = \"(?<currentValue>.+?)\""
      ],
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "description": "Separate nixpkgs updates into individual PRs",
      "matchManagers": ["nix"],
      "matchDepNames": ["nixpkgs"],
      "groupName": "nixpkgs"
    },
    {
      "description": "Configure comin dependency updates",
      "matchManagers": ["nix"],
      "matchDepNames": ["comin"]
    },
    {
      "description": "Configure sops-nix dependency updates",
      "matchManagers": ["nix"],
      "matchDepNames": ["sops-nix"]
    },
    {
      "description": "GitHub Actions with pinned digests",
      "matchManagers": ["github-actions"],
      "pinDigests": true
    },
    {
      "description": "thomasloven repos: only semver tags (ignore numeric 11-16)",
      "matchDepNames": [
        "thomasloven/lovelace-card-mod",
        "thomasloven/lovelace-auto-entities",
        "thomasloven/lovelace-layout-card"
      ],
      "allowedVersions": "/^v/"
    }
  ],
  "schedule": ["at any time"],
  "timezone": "Europe/Warsaw",
  "dependencyDashboard": true,
  "prConcurrentLimit": 10,
  "prHourlyLimit": 10,
  "reviewers": ["Automaat"]
}
