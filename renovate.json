{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update HACS GitHub release download URLs",
      "fileMatch": ["\\.nix$"],
      "matchStrings": [
        "url = \"https://github\\.com/(?<depName>[^/]+/[^/]+)/releases/download/(?<currentValue>[^/]+)/"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "description": "Update fetchFromGitHub rev tags",
      "fileMatch": ["\\.nix$"],
      "matchStrings": [
        "# renovate: datasource=github-tags depName=(?<depName>.+?)\\s+rev = \"(?<currentValue>.+?)\";"
      ],
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "description": "Track Home Assistant version in flake.nix comment",
      "fileMatch": ["flake\\.nix$"],
      "matchStrings": [
        "# Current HA version: (?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "home-assistant/core",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "description": "Separate nixpkgs updates into individual PRs",
      "matchManagers": ["nix"],
      "matchDepNames": ["nixpkgs"],
      "groupName": "nixpkgs"
    },
    {
      "description": "Separate comin updates into individual PRs",
      "matchManagers": ["nix"],
      "matchDepNames": ["comin"]
    },
    {
      "description": "Separate sops-nix updates into individual PRs",
      "matchManagers": ["nix"],
      "matchDepNames": ["sops-nix"]
    },
    {
      "description": "GitHub Actions with pinned digests",
      "matchManagers": ["github-actions"],
      "pinDigests": true
    }
  ],
  "schedule": ["at any time"],
  "timezone": "Europe/Warsaw",
  "dependencyDashboard": true,
  "prConcurrentLimit": 10,
  "prHourlyLimit": 10
}
