# Template for secrets.yaml
# Copy this file to secrets.yaml and fill in your actual values, then encrypt with:
# nix run nixpkgs#sops -- secrets/secrets.yaml

# Grafana admin password (will be hashed by Grafana)
grafana-admin-password: "your-secure-password-here"

# Home Assistant long-lived access token for Prometheus
# Create in HA: Settings > People > Admin > Security > Long-lived access tokens
home-assistant-prometheus-token: "your-long-lived-token-here"
